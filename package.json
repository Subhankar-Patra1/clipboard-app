{
  "name": "smartclip",
  "productName": "SmartClip",
  "version": "1.0.0",
  "description": "A persistent, privacy-first clipboard manager",
  "author": {
    "name": "Subhankar Patra",
    "url": "https://github.com/Subhankar-Patra1"
  },
  "homepage": "https://github.com/Subhankar-Patra1/clipboard-app",
  "repository": {
    "type": "git",
    "url": "https://github.com/Subhankar-Patra1/clipboard-app.git"
  },
  "license": "MIT",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "dist": "npm run build && electron-builder",
    "dist:appx": "npm run build && electron-builder --win appx",
    "generate-icons": "node scripts/generate-store-icons.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.subhankar.smartclip",
    "productName": "SmartClip",
    "copyright": "Copyright Â© 2025 Subhankar Patra",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "package.json",
      "build/**/*"
    ],
    "win": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "appx": {
      "identityName": "Spynox.SmartClip",
      "publisher": "CN=39E06D7A-12A9-4473-9A7F-11D035A8CCDA",
      "publisherDisplayName": "Spynox",
      "applicationId": "SmartClip",
      "displayName": "SmartClip",
      "languages": ["en-US"],
      "showNameOnTiles": true,
      "backgroundColor": "#1a1a2e"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SmartClip"
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "better-sqlite3": "^9.4.0",
    "clsx": "^2.1.0",
    "dayjs": "^1.11.10",
    "fs-extra": "^11.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/better-sqlite3": "^7.6.9",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.2.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^2.0.0",
    "sharp": "^0.34.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  }
}
